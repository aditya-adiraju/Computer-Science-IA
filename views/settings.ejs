<%- include('./layouts/header') %>
<style>
</style>

<script>
      function openForm() {
    document.getElementById("popupForm").style.display = "block";

  }

  function closeForm() {
    document.getElementById("popupForm").style.display = "none";
  }

    function logout() {
        document.getElementById("LOGOUT").submit();
    }
</script>
<form id="LOGOUT" action="/logout?_method=DELETE" method="POST"></form>

<h1 style="text-align:center;" >CISMUN ONLINE DATABASE</h1>
<h2 style="text-align:center;">Settings</h2>
<div class="center" style="color:red;margin-right:5%"><% if (messages.error) { %><%= messages.error %> <br> <%} %></div>
<span class="center" style="margin-right:5%"> <button class="button" onclick="openForm()" style="max-width: 100%, ">Change Password</button></span>
<div class="loginPopup">
    <div class="formPopup" id="popupForm">
        <form action="/settings/change-password" method="POST">
            <h2 style="text-align:center;">Change Password: </h2>
            <div class="container" style="padding-left:2%">
                <label for="password">New Password: </label>
                <input class="input" type="text" id="password" name="password" required>
                <label for="confirmPassword">Confirm Password: </label>
                <input class="input" type="text" id="confirmPassword" name="confirmPassword" required>
            </div>
            <br><br><br>
            <button class="button" type="submit">ADD</button>
            <button type="button" class="button" onclick="closeForm()">CLOSE</button>
            <br><br>
        </form>
    </div>
</div>